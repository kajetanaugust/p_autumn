---
import { Mail, Phone, MapPin, Landmark, Banknote } from 'lucide-astro'

import Box from '@components/Box/Box.astro'
import Link from '@components/Link/Link.astro'
import Text from '@components/Text/Text.astro'

import SectionLayout from '@layouts/SectionLayout.astro'

import ContactElement from './subcomponents/ContactElement/ContactElement.astro'

import { mapStyles } from './styles.css'
---

<SectionLayout sectionId="kontakt" isCentered isFullWidth isWithSmallPb>
  <Box direction="column" gap={['48px', '80px']}>
    <Box direction="column" gap="24px" align="stretch" height="100%">
      <Box direction="column" gap="16px">
        <Text variant="tagline">Kontakt</Text>
        <Box direction="column" gap="24px">
          <Text variant="heading-2">Skontaktuj się</Text>
          <Text variant="body-medium"
            >Jesteśmy tutaj, aby odpowiedzieć na Twoje pytania i pomóc w każdej
            sytuacji.
          </Text>
        </Box>
      </Box>
    </Box>
    <Box direction={['column', 'column', 'row']} gap="24px" wrap="wrap">
      <ContactElement elementName="E-mail">
        <Mail slot="icon" />
        <Link href="mailto:pogodna@jesien.com.pl">pogodna@jesien.com.pl</Link>
      </ContactElement>
      <ContactElement elementName="Telefon">
        <Phone slot="icon" />
        <Link href="tel:32 284 54 59">32 284 54 59</Link>
        <Link href="tel:32 284 54 62">32 284 54 62</Link>
      </ContactElement>
      <ContactElement elementName="Adres">
        <MapPin slot="icon" />
        <Text variant="body-regular">ul. ks. H. Renka 63</Text>
        <Text variant="body-regular">42-603 Tarnowskie Góry</Text>
      </ContactElement>
      <ContactElement elementName="NIP">
        <Landmark slot="icon" />
        <Text variant="body-regular">645 249 78 64</Text>
      </ContactElement>
      <ContactElement elementName="Bank">
        <Banknote slot="icon" />
        <Text variant="body-regular">Santander BP S.A.</Text>
        <Text variant="body-regular" textWrap="nowrap"
          >09 1090 2011 0000 0001 1302 4243</Text
        >
        <Text variant="body-regular">SWIFT: WBKPPLPP</Text>
      </ContactElement>
    </Box>
  </Box>
  <Box direction="column" height="100%" width="100%" align="stretch">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2100.907131393209!2d18.80668648938962!3d50.42088576458034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471129425abce421%3A0xcdabae3a73b40fa1!2sPensjonat+Seniora+%22Pogodna+Jesie%C5%84%22!5e0!3m2!1spl!2spl!4v1553370849561"
      width="100%"
      class={mapStyles}
      style="border:0"
      allowfullscreen
      loading="lazy"
      title="Mapa lokalizacji Pensjonat Seniora Pogodna Jesień"></iframe>
  </Box>
</SectionLayout>
