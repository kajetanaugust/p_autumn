---
import Box from "../../../../components/Box/Box.astro";
import Text from "../../../../components/Text/Text.astro";
import {contactElement} from "./styles.css";

interface Props {
    elementName: string;
}

const {elementName} = Astro.props;
---

<Box direction="row" gap={16} width="fit-content" class={contactElement}>
    <Box direction="column" gap={16} align="center" width="fit-content">
        <slot name="icon"/>
    </Box>
    <Box direction="column" width="fit-content" gap={8}>
        <Text variant="heading-6">{elementName}</Text>
        <slot/>
    </Box>
</Box>
