---
import {
  Hospital,
  HeartHandshake,
  House,
  Apple,
  HandHeart,
  Cross,
} from 'lucide-astro'

import Box from '@components/Box/Box.astro'
import Text from '@components/Text/Text.astro'

import SectionLayout from '@layouts/SectionLayout.astro'

import OfferCard from './subcomponents/OfferCard/OfferCard.astro'
import { offerCardIcon } from './subcomponents/OfferCard/styles.css'
---

<SectionLayout sectionId="oferta" isCentered isFullWidth isWithSmallPb>
  <Box direction="column" gap={[16, 20]} align="center" maxWidth="768px">
    <Text variant="tagline">Oferta</Text>
    <Text variant="heading-2" textAlign="center">
      Nasze usługi w zakresie opieki zdrowotnej
    </Text>
    <Text variant="text-medium" textAlign="center">
      Oferujemy kompleksową opiekę pielęgniarską, która zapewnia wsparcie w
      codziennych potrzebach. Nasz zespół specjalistów dba o zdrowie i komfort
      naszych mieszkańców.
    </Text>
  </Box>
  <Box gap={48} width="fit-content" justify="center" wrap="wrap">
    <OfferCard
      title="Komfortowe pokoje"
      description="Pokojach jedno- i dwuosobowych z łazienkami, których umeblowanie i wystrój stwarza domową atmosferę"
    >
      <House class={offerCardIcon} />
    </OfferCard>
    <OfferCard
      title="Opiekunki i pielęgniarki"
      description="Całodobowo dostępne opiekunki, które starają się sprostać indywidualnym oczekiwaniom oraz dbają o spokój i odpoczynek naszych pensjonariuszy."
    >
      <HandHeart class={offerCardIcon} />
    </OfferCard>
    <OfferCard
      title="Wyżywienie"
      description="Pełne domowe wyżywienie, również dietetyczne, zgodnie z zaleceniami lekarza. Posiłki spożywamy wspólnie, co integruje naszą społeczność."
    >
      <Apple class={offerCardIcon} />
    </OfferCard>
    <OfferCard
      title="Opieka lekarska"
      description="Wszyscy pensjonariusze są rejestrowanie w przychodni i mają zapewnioną opiekę lekarza rodzinnego."
    >
      <Hospital class={offerCardIcon} />
    </OfferCard>
    <OfferCard
      title="Opieka duszpasterska"
      description="Ksiądz z pobliskiej parafii regularnie odwiedza naszych pensjonariuszy, zabawia, dotrzymuje towarzystwa i wspiera duchowo."
    >
      <HeartHandshake class={offerCardIcon} />
    </OfferCard>
    <OfferCard
      title="Zabiegi rehabilitacyjne"
      description="Dla osób z orzeczeniem o znacznym stopniu niepełnosprawności zapewniamy 80 bezpłatnych zabiegów rehabilitacyjnych."
    >
      <Cross class={offerCardIcon} />
    </OfferCard>
  </Box>
</SectionLayout>
