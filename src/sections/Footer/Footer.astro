---
import { Facebook } from 'lucide-astro'

import Box from '@components/Box/Box.astro'
import Button from '@components/Button/Button.astro'
import Text from '@components/Text/Text.astro'

import { footerWrapper } from './styles.css'

const currentYear = new Date().getFullYear()
---

<Box
  width="100%"
  px={['16px', '64px']}
  py="20px"
  align="center"
  justify="center"
  class={footerWrapper}
>
  <Box
    direction={['column', 'row']}
    gap="24px"
    justify="space-between"
    align="center"
    maxWidth="1920px"
  >
    <Text variant="body-small">©{currentYear} Pogodna Jesień Sp.z o o.</Text>
    <Text variant="body-small" textAlign="center"
      >Zezwolenie Wojewody Śląskiego na prowadzenie całodobowej opieki nad
      osobami niepełnosprawnymi i starszymi nr: PS.II.9041/2/10
    </Text>
    <Button
      variant="iconGhost"
      href="https://www.facebook.com/pensjonatpogodnajesien"
      aria-label="facebook link"
    >
      <Facebook />
    </Button>
  </Box>
</Box>
