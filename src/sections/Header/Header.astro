---
import { Menu } from 'lucide-astro'

import Box from '@components/Box/Box.astro'
import Button from '@components/Button/Button.astro'

import logoMobile from '@assets/logo-image.svg'
import logoDesktop from '@assets/logo.svg'

import {
  desktopMenu,
  headerLogoDesktop,
  headerLogoMobile,
  mobileMenu,
  mobileMenuHamburger,
} from './styles.css'
---

<Box
  position="fixed"
  top={'0px'}
  left={'0px'}
  zIndex="50"
  bgColor="neutral-white"
  shadow="shadow-md"
  px={[16, 64]}
  py={20}
  width="100%"
  height="84px"
  justify="center"
  align="center"
>
  <Box
    maxWidth="1920px"
    width="100%"
    direction="row"
    justify="space-between"
    align="center"
  >
    <a href="/" aria-label="clickable logo go to homepage">
      <Box
        height="52px"
        width="fit-content"
        class={headerLogoDesktop}
        maxWidth="285px"
      >
        <img
          src={logoDesktop.src}
          alt="Logo"
          loading="eager"
          width="100%"
          height="100%"
        />
      </Box>
      <Box
        height="52px"
        width="fit-content"
        class={headerLogoMobile}
        maxWidth="60px"
      >
        <img
          src={logoMobile.src}
          alt="Logo"
          loading="eager"
          width="100%"
          height="100%"
        />
      </Box>
    </a>
    <Box width="fit-content" class={desktopMenu} gap={8}>
      <Button variant="ghost" href="#opieka">Opieka</Button>
      <Button variant="ghost" href="#historia">Historia</Button>
      <Button variant="ghost" href="#oferta">Oferta</Button>
      <Button variant="ghost" href="#cennik">Cennik</Button>
      <Button variant="primary" href="#kontakt">Skontaktuj się z nami</Button>
    </Box>
    <Button
      variant="iconGhost"
      class={mobileMenuHamburger}
      id="mobile-menu-hamburger"
      aria-label="mobile menu hamburger button"
      aria-expanded={false}
      aria-controls="mobile-menu"
    >
      <Menu />
    </Button>
    <Box
      direction="column"
      justify="center"
      align="flex-start"
      gap="16px"
      class={mobileMenu}
      position="absolute"
      zIndex="50"
      top="84px"
      left="0px"
      width="100%"
      height="100vh"
      bgColor="neutral-white"
      shadow="shadow-md"
      px={'20px'}
      py={'16px'}
      id="mobile-menu"
    >
      <Button variant="ghost" href="#opieka">Opieka</Button>
      <Button variant="ghost" href="#historia">Historia</Button>
      <Button variant="ghost" href="#oferta">Oferta</Button>
      <Button variant="ghost" href="#cennik">Cennik</Button>
      <Button variant="primary" href="#kontakt">Skontaktuj się z nami</Button>
    </Box>
  </Box>
</Box>
