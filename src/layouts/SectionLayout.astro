---
import Box from '@components/Box/Box.astro'

import type { Color } from '../tokens/types'

interface Props {
  isCentered?: boolean
  isWithBorder?: boolean
  sectionId?: string
  isFullWidth?: boolean
  isWithSmallPt?: boolean
  isWithSmallPb?: boolean
  bgColor?: Color
}

const {
  isCentered,
  isWithBorder,
  sectionId,
  isFullWidth,
  isWithSmallPb,
  isWithSmallPt,
  bgColor = 'neutral-white',
} = Astro.props
---

<Box
  px={['20px', '80px']}
  pt={isWithSmallPt ? ['48px', '80px'] : ['64px', '112px']}
  pb={isWithSmallPb ? ['48px', '80px'] : ['64px', '112px']}
  gap={['48px', '80px']}
  direction="column"
  align={isCentered ? 'center' : 'flex-start'}
  isWithBorder={isWithBorder}
  id={sectionId}
  width={isFullWidth ? '100%' : 'fit-content'}
  bgColor={bgColor}
>
  <slot />
</Box>
