---
import Box from '@components/Box/Box.astro'

import type { Color } from '../tokens/types'

interface Props {
  isCentered?: boolean
  isWithBorder?: boolean
  sectionId?: string
  isFullWidth?: boolean
  isWithSmallPy: boolean
  bgColor?: Color
}

const {
  isCentered,
  isWithBorder,
  sectionId,
  isFullWidth,
  isWithSmallPy,
  bgColor = 'neutral-white',
} = Astro.props
---

<Box
  px={[20, 80]}
  py={isWithSmallPy ? [48, 80] : [64, 112]}
  gap={[48, 80]}
  direction="col"
  align={isCentered ? 'center' : 'start'}
  isWithBorder={isWithBorder}
  id={sectionId}
  width={isFullWidth ? 'full' : 'fit'}
  bgColor={bgColor}
>
  <slot />
</Box>
