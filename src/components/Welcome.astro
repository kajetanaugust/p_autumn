---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import Box from "./Box/Box.astro";
import Button from "./Button/Button.astro";
import Text from "./Text/Text.astro";
import {Wifi} from 'lucide-astro'
import Image from "./Image/Image.astro";
import placeholder from '../assets/placeholder.jpg'
---

<div id="container">
    <main>
        <Box justify="center" align="center" bgColor="luxor_gold_light" width={500} height={500} shadow="xxl" px={32}
             py={24}>
            test
        </Box>
        <Button variant="primary" size="large" href="https://astro.build/blog/astro-5/">test</Button>
        <Button variant="ghost" size="large" href="https://astro.build/blog/astro-5/">test</Button>
        <Button variant="outline" size="large" href="https://astro.build/blog/astro-5/">test</Button>
        <Button variant="iconGhost" size="large" href="https://astro.build/blog/astro-5/"><Wifi /></Button>
        <Button variant="iconPrimary" size="large" href="https://astro.build/blog/astro-5/"><Wifi /></Button>
        <Button variant="iconOutline" size="large" href="https://astro.build/blog/astro-5/"><Wifi /></Button>
        <Button variant="iconGhost" size="small" href="https://astro.build/blog/astro-5/"><Wifi /></Button>
        <Button variant="iconPrimary" size="small" href="https://astro.build/blog/astro-5/"><Wifi /></Button>
        <Button variant="iconOutline" size="small" href="https://astro.build/blog/astro-5/"><Wifi /></Button>

        <Box direction="column">
            <!-- Test all text variants -->
            <Box direction="column" gap={8}>
                <Text variant="heading-1" color="neutral_darkest">Heading 1</Text>
                <Text variant="heading-2" color="luxor_gold">Heading 2</Text>
                <Text variant="heading-3" color="neutral_darker">Heading 3</Text>
                <Text variant="heading-4" color="luxor_gold_dark">Heading 4</Text>
                <Text variant="heading-5" color="neutral_dark">Heading 5</Text>
                <Text variant="heading-6" color="luxor_gold_darker">Heading 6</Text>
            </Box>

            <!-- Test text sizes -->
            <Box direction="column" gap={8}>
                <Text variant="text-large" color="neutral_darkest">Large text sample</Text>
                <Text variant="text-medium" color="neutral_darker">Medium text sample</Text>
                <Text variant="text-regular" color="neutral_dark">Regular text sample</Text>
                <Text variant="text-small" color="neutral">Small text sample</Text>
                <Text variant="text-tiny" color="neutral_light">Tiny text sample</Text>
                <Text variant="tagline" color="luxor_gold" weight={500}>Tagline sample</Text>
            </Box>

            <!-- Test all colors with one variant -->
            <Box direction="column" gap={4}>
                <Text variant="text-regular" color="neutral_white">White text</Text>
                <Text variant="text-regular" color="neutral_lightest">Lightest neutral</Text>
                <Text variant="text-regular" color="neutral_lighter">Lighter neutral</Text>
                <Text variant="text-regular" color="neutral_light">Light neutral</Text>
                <Text variant="text-regular" color="neutral">Neutral</Text>
                <Text variant="text-regular" color="neutral_dark">Dark neutral</Text>
                <Text variant="text-regular" color="neutral_darker">Darker neutral</Text>
                <Text variant="text-regular" color="neutral_darkest">Darkest neutral</Text>
            </Box>

            <!-- Test luxor gold colors -->
            <Box direction="column" gap={4}>
                <Text variant="text-regular" color="luxor_gold_lightest">Lightest luxor gold</Text>
                <Text variant="text-regular" color="luxor_gold_lighter">Lighter luxor gold</Text>
                <Text variant="text-regular" color="luxor_gold_light">Light luxor gold</Text>
                <Text variant="text-regular" color="luxor_gold">Luxor gold</Text>
                <Text variant="text-regular" color="luxor_gold_dark">Dark luxor gold</Text>
                <Text variant="text-regular" color="luxor_gold_darker">Darker luxor gold</Text>
                <Text variant="text-regular" color="luxor_gold_darkest">Darkest luxor gold</Text>
            </Box>

            <!-- Test font weights -->
            <Box direction="column" gap={4}>
                <Text variant="text-regular" color="neutral_darkest" weight={200}>Font weight 200</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={300}>Font weight 300</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={400}>Font weight 400</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={500}>Font weight 500</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={600}>Font weight 600</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={700}>Font weight 700</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={800}>Font weight 800</Text>
                <Text variant="text-regular" color="neutral_darkest" weight={900}>Font weight 900</Text>
            </Box>

            <!-- Test font styles -->
            <Box direction="column" gap={4}>
                <Text variant="text-regular" color="neutral_darkest" style="normal">Normal style</Text>
                <Text variant="text-regular" color="neutral_darkest" style="italic">Italic style</Text>
            </Box>

            <!-- Test dark background with light text -->
            <Box bgColor="neutral_darkest" p={16} direction="column" gap={4}>
                <Text variant="heading-3" color="neutral_white">White heading on dark background</Text>
                <Text variant="text-regular" color="neutral_lightest">Light text on dark background</Text>
                <Text variant="text-small" color="luxor_gold_lighter">Gold accent on dark background</Text>
            </Box>

            <!-- Test light background with dark text -->
            <Box bgColor="neutral_lightest" p={16} direction="column" gap={4}>
                <Text variant="heading-3" color="neutral_darkest">Dark heading on light background</Text>
                <Text variant="text-regular" color="neutral_darker">Dark text on light background</Text>
                <Text variant="text-small" color="luxor_gold_dark">Gold accent on light background</Text>
            </Box>


            <Box width='auto' height="auto">
                <Image src={placeholder} alt="Astro logo" width={128} height={128} />
            </Box>
        </Box>
    </main>

    <a href="https://astro.build/blog/astro-5/" id="news" class="box">
        <svg width="32" height="32" fill="none" xmlns="http://www.w3.org/2000/svg"
        >
            <path
                    d="M24.667 12c1.333 1.414 2 3.192 2 5.334 0 4.62-4.934 5.7-7.334 12C18.444 28.567 18 27.456 18 26c0-4.642 6.667-7.053 6.667-14Zm-5.334-5.333c1.6 1.65 2.4 3.43 2.4 5.333 0 6.602-8.06 7.59-6.4 17.334C13.111 27.787 12 25.564 12 22.666c0-4.434 7.333-8 7.333-16Zm-6-5.333C15.111 3.555 16 5.556 16 7.333c0 8.333-11.333 10.962-5.333 22-3.488-.774-6-4-6-8 0-8.667 8.666-10 8.666-20Z"
                    fill="#111827"></path>
        </svg
        >
        <h2>What's New in Astro 5.0?</h2>
        <p>
            From content layers to server islands, click to learn more about the new features and
            improvements in Astro 5.0
        </p>
    </a>
</div>
