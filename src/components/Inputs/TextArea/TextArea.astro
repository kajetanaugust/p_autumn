---
import Box from '@components/Box/Box.astro'

import { styledTextArea } from '../styles.css'
import InputLabel from '../subcomponents/InputLabel.astro'

interface Props {
  name: string
  label: string
  id: string
  value?: string
  placeholder?: string
  required?: boolean
  disabled?: boolean
  class?: string
  isWithLabel?: boolean
  requiredMessage?: string
}

const {
  placeholder,
  name,
  label,
  id,
  value,
  required,
  disabled,
  class: className = '',
  isWithLabel = true,
  requiredMessage,
} = Astro.props

const defaultRequiredMessage = requiredMessage || 'To pole jest wymagane.'
---

<Box direction="column" gap={8} justify="start">
  {isWithLabel && <InputLabel label={label} id={id} required={required} />}
  <textarea
    aria-label={label}
    placeholder={placeholder}
    name={name}
    id={id}
    value={value}
    required={required}
    disabled={disabled}
    oninput="window.inputValidation.clearValidation(this)"
    oninvalid={`window.inputValidation.handleInputValidation(this, '${defaultRequiredMessage}', '')`}
    class={`${styledTextArea} ${className}`}></textarea>
</Box>
